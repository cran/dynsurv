         Title = "{dynsurv}: {D}ynamic Models for Survival Data}",
         Author = personList(as.person("Xiaojing Wang"),
                             as.person("Ming-Hui Chen"),
                             as.person("Wenjie Wang"),
                             as.person("Jun Yan")),
         Note =	"{R} package version 0.3-4",
         Year =	"2016",
         Url = "https://CRAN.R-project.org/package=dynsurv",

         textVersion = paste("Wang, X., Chen, M.-H., Wang, W., Yan, J. (2016).",
                             "dynsurv: Dynamic Models for Survival Data.",
                             "R package version 0.3-4.",
                             "https://CRAN.R-project.org/package=dynsurv")
)
